<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h3>Mining with {{miningApp.name}}</h3>
      <p>{{miningApp.info}}</p>
      <h4>Get the lastest version of
          <a href="{{miningApp.url}}" target="_blank">{{miningApp.name}}</a>
      </h4>
      </div>  
  </div>
  {{#if miningApp.runtime}}
    <div class="row">
      <div class="col-md-12">

        {{#if miningApp.runtime.example}}
        <div>
          <p class="text-left">
            <strong>Run it with:</strong>
            <br>
            <code>{{miningApp.runtime.example}}</code>
          </p>
        </div>
        {{/if}}
      </div>
    </div> 
  
    {{#if miningApp.runtime.options}}
    <div class="row">
      <div class="col-md-12">       
        <!--Button Expands the Options-->
        <button type="button" class="btn btn-info" data-toggle="collapse" data-target="#mining-app-{{miningAppIndex}}-runtime-options-collapse" aria-expanded="false" aria-controls="mining-app-{{miningAppIndex}}-runtime-options-collapse">Options</button>
      </div>
    </div>
    
    <div class="row">
      <div class="col-md-12"> 
        <!--Button Expands entire Options div-->
        <div class="collapse" id="mining-app-{{miningAppIndex}}-runtime-options-collapse">

          <!--Accordion allows one section  of options to be shown at a time-->
          <div class="accodion" id="mining-app-{{miningAppIndex}}-runtime-options-accordion">
            {{#each miningApp.runtime.options.sections as |section sectionIndex|}}
              <div class="card">
                <div class="card-header" id="mining-app-{{miningAppIndex}}-runtime-options-section-{{sectionIndex}}-heading">
                  <h5 class="mb-0">
                    <button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#mining-app-{{miningAppIndex}}-runtime-options-section-{{sectionIndex}}-collapse" aria-expanded="false" aria-controls="mining-app-{{miningAppIndex}}-runtime-options-section-{{sectionIndex}}-collapse">
                    {{section.name}}
                    </button>
                  </h5>                                
                </div>
                <div class="collapse" id="mining-app-{{miningAppIndex}}-runtime-options-section-{{sectionIndex}}-collapse" data-parent="#mining-app-{{miningAppIndex}}-runtime-options-accordion" aria-labelledby="mining-app-{{miningAppIndex}}-runtime-options-section-{{sectionIndex}}-heading">
                  <div class="card-body">
                    <h5>{{section-info}}</h5>    
                    <div class="table-responsive">
                      <table class="table table-striped table-condensed">
                        <thead>
                          <th>Parameter</th>
                          <th>Description</th>
                        </thead>
                        <tbody>
                        {{#each section.parameters as |param|}}
                          <tr>
                            <td><div style="vertical-align:top;">{{param.name}}</div></td>
                            <td><div style="vertical-align:top;">{{param.info}}</div></td>
                          </tr>
                          {{#each param.values as |value|}}
                            <tr>
                              <td><div style="margin-left:25px;vertical-align:top;">{{value.name}}</div></td>
                              <td><div style="margin-left:25px;vertical-align:top;">{{value.info}}</div></td>
                            </tr>                        
                          {{/each}}
                        {{/each}}
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
              </div>
            {{/each}}            
          </div>
        </div>
      </div>              
    </div>
    {{/if}}

  {{/if}}

  {{#if miningApp.notes}}
    <div class="row">
      <div class="col-md-12">
            
        <h4>Notes</h4>
          
        {{#each miningApp.notes as |note|}}    
          <div class="card">
            <div class="card-header">
              {{note.name}}
            </div>          
            <div class="card-body">
              <p>{{note.info}}</p>
            </div>      
          </div>
        {{/each}}         
        
      </div>
    </div>
  {{/if}}  

</div>


