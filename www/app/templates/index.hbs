{{pool-stats-bar poolStats=model.poolStats networkStats=model.networkStats}}  

<div class="container">   
  
    <div class="card">
      <div class="card-header">        
          Your Stats &amp; Payment History        
      </div>
      <div class="card-body">
        <div class="stats">                
          <div class="input-group">
            {{input value=cachedLogin class="form-control" placeholder="Enter Your Ubiq Address"}}
            <span class="input-group-btn">
              <button class="btn btn-primary" type="button" {{action 'lookup' cachedLogin}}>
                <span style="display: inline;">
                  <i class="fa fa-search"></i>Lookup
                </span>
              </button>
            </span>
          </div>
        </div>
      </div>      
    </div>
  
    <div class="card">
      <div class="card-header">        
        <span class="text-center">Instructions</span>        
      </div>      
      <div class="card-body">
        <p class="lead text-center">
          {{#link-to "help"}}
            <span class="ul ul-success">Stratum</span>
          {{/link-to}}
        </p>

        <div class="text-center">
          <object type="image/svg+xml" data="/assets/images/flag-usa.svg" class="flag"></object>
        </div>

        <p class="lead text-center">{{config.APP.StratumHost}}:{{config.APP.StratumPort}}</p>        
      </div>
    </div>    


</div>

  
